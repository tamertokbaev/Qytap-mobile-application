<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    tools:context=".BookInnerFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="120dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:layout_marginTop="30dp"
            android:textSize="24dp"
            app:layout_constraintTop_toTopOf="@id/home_account"
            app:layout_constraintStart_toStartOf="@id/home_account"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/header">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/checkout_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"/>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/totalSum"
        android:text="Total sum:"
        android:textFontWeight="600"
        android:textSize="26dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toTopOf="@id/card_save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/card_save_button"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:textFontWeight="600"
        android:fontFamily="@font/poppins"
        android:textSize="14sp"
        android:backgroundTint="#50C2C9"
        android:text="Go shopping"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        android:layout_marginTop="15dp"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>