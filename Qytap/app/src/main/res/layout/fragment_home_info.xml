<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home_account_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_support_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:id="@+id/full_name_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingBottom="4dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Full name"
                    android:textSize="14sp"
                    android:textFontWeight="500"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tamerlan Tokbayev"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textFontWeight="600"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                app:layout_constraintTop_toBottomOf="@id/full_name_linear"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:paddingBottom="4dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14sp"
                    android:textFontWeight="500"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tokbaev201536@gmail.com"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textFontWeight="600"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bought_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                app:layout_constraintTop_toBottomOf="@id/email_linear"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:paddingBottom="4dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Bought books"
                    android:textSize="14sp"
                    android:textFontWeight="500"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textFontWeight="600"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/joined_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                app:layout_constraintTop_toBottomOf="@id/bought_linear"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:paddingBottom="4dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Joined date"
                    android:textSize="14sp"
                    android:textFontWeight="500"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021-12-21"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textFontWeight="600"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/push_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/joined_linear"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:paddingBottom="0dp">
                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable push notifications"
                    android:textSize="14sp"
                    android:textFontWeight="500"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>