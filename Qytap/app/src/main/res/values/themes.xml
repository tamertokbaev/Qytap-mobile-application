<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Qytap" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#50C2C9</item>
        <item name="colorPrimaryVariant">#727272</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="fontFamily">@font/poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
<!--        <item name="android:background">#E5E5E5</item>-->
        <!-- Customize your theme here. -->
    </style>

    <color name="backgroundGray">#E5E5E5</color>
    <color name="colorPrimaryLight">#ADD2D4</color>

    <style name="Input">
        <item name="fontFamily">@font/poppins</item>
        <item name="fontWeight">400</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextHeader">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="fontWeight">800</item>
    </style>

    <style name="AccountUsername">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AccountEmail">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.85</item>
    </style>

    <style name="AccountButton">
        <item name="backgroundTint">@color/color_primary</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BookNameCatalog">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontWeight">900</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:lines">2</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>